<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <servlet>
    <servlet-name>TheChefServlet</servlet-name>
    <servlet-class>controller.TheChefServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BoardServlet</servlet-name>
    <servlet-class>controller.BoardServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ContentsServlet</servlet-name>
    <servlet-class>controller.ContentsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductServlet</servlet-name>
    <servlet-class>controller.ProductServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BasketServlet</servlet-name>
    <servlet-class>controller.BasketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TheChefServlet</servlet-name>
    <url-pattern>/TheChefProcessing</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BoardServlet</servlet-name>
    <url-pattern>/BoardProcessing</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ContentsServlet</servlet-name>
    <url-pattern>/ContentsProcessing</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductServlet</servlet-name>
    <url-pattern>/ProductProcessing</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BasketServlet</servlet-name>
    <url-pattern>/BasketProcessing</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <resource-ref>
    <description>Oralce11g Datasource example</description>
    <res-ref-name>jdbc/Oracle11g</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>